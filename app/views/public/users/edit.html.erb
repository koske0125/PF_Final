<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">プロフィール編集</h2>
    <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="mb-3 mt-4">
      <%= f.label "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "ユーザー名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム", class: "form-label" %>
      <%= f.text_field :summoner_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム公開設定", class: "form-label" %><br />
      <%= f.radio_button :is_published, "closed", class: "form-check-input" %>
      <%= f.label "非公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "limited", class: "form-check-input" %>
      <%= f.label "相互フォローにのみ公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "opened", class: "form-check-input" %>
      <%= f.label "全体に公開", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "プロフィール更新", class: "btn btn-success me-3" %><%= link_to "退会する", withdraw_public_users_path, class: "btn btn-danger", data: { confirm: "【確認】アカウントを削除してもよろしいですか？" } %>
    </div>

    <% end %>
  </div>

</div>
