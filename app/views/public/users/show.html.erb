<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">プロフィール</h2>
    <table class="table text-center">

      <tr>
        <td>プロフィール画像</td>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "64x64", class: "rounded-circle" %>
          <% else %>
            <%= image_tag asset_path("no_image.jpg"), size: "64x64", class: "rounded-circle" %>
          <% end %>
        </td>
      </tr>

      <tr>
        <td>ユーザー名</td>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <td>サモナーネーム</td>
        <td><%= @user.summoner_name %></td>
      </tr>

      <tr>
        <td>サモナーネーム公開設定</td>
        <td><%= @user.is_published_i18n %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <div class="text-center">
      <%= link_to "プロフィール編集", edit_public_user_path(@user), class: "btn btn-success" %>
    </div>
  </div>
</div>
