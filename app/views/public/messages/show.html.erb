<div class="container-fluid">
  <div class="col-12 col-md-8 col-lg-6 col-xl-10 mx-auto mt-3">
    <% @messages.each do |message| %>
      <div class="card">
        <div class="card-header">
          <%= message.user.name %>
        </div>
        <div class="card-body">
          <%= simple_format(message.body) %>
        </div>
        <div class="card-footer">
          <%= message.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分%-S秒") %>
        </div>
      </div>

    <%= form_with model: [@room, @messages], do |f| %>
    <%= f.text_field :body, class: "form-control", placeholder: "メッセージを入力してください" %>
    <%= f.submit "送信", class: "btn btn-success" %>
    <% end %>

  </div>
</div>