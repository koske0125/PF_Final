<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">サインイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3 mt-4">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label "ログイン状態を維持", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "サインイン", class: "btn btn-success" %>
    </div>

    <% end %>

  </div>

</div>