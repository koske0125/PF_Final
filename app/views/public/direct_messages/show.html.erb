<% unless @user.id == current_user.id %>
  <% if @is_room == true %>
    <%= link_to "ダイレクトメッセージへ", room_path(@room_id), class: "btn btn-success" %>
  <% else %>
    <%= form_for @room do |f| %>
    <%= fields_for @entry do |e| %>
    <%= e.hidden_field :user_id, value: @user.id %>
    <%= f.submit "メッセージを送る", class: "btn btn-primary" %>
    <% end %>