<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">サインアップ</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="mb-3 mt-4">
      <%= f.label "ユーザー名(必須)", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="form-text">サイト内で表示されるユーザー名を入力してください</div>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム(必須)", class: "form-label" %>
      <%= f.text_field :summoner_name, class: "form-control" %>
      <div class="form-text">ゲーム内で使用しているサモナーネームを入力してください</div>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム公開設定(必須)", class: "form-label" %><br />
      <%= f.radio_button :is_published, "closed", class: "form-check-input" %>
      <%= f.label "非公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "limited", class: "form-check-input" %>
      <%= f.label "相互フォローにのみ公開", class: "form-check-label" %>
      <%= f.radio_button :is_published, "opened", class: "form-check-input" %>
      <%= f.label "全体に公開", class: "form-check-label" %>
      <div class="form-text">サモナーネームの公開範囲を選択してください</div>
    </div>

    <div class="mb-3">
      <%= f.label "メールアドレス(必須)", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <div class="form-text">ログイン時に使用するメールアドレスを入力してください</div>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード(必須)", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <div class="form-text"><% if @minimum_password_length %><%= @minimum_password_length %>文字以上で入力してください<% end %></div>
    </div>

    <div class="mb-3">
      <%= f.label "パスワード(確認用)", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "サインアップ", class: "btn btn-success" %>
    </div>

    <% end %>
  </div>

</div>
