<div class="container-fluid">
  <div class="col-12 col-md-8 col-lg-6 col-xl-10 mx-auto mt-3">
    <h2>サークル情報の編集</h2>
    <%= form_with model: @club, url: admin_club_path(@club), method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="mb-3 mt-4">
      <%= f.label "サークル名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3 mt-4">
      <%= f.label "サークル紹介", class: "form-label" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "更新する", class: "btn btn-success me-3" %>
    </div>

    <% end %>

  </div>
</div>