<div class="container-fluid">
  <div class="col-12 col-md-8 col-lg-6 col-xl-10 mx-auto mt-3">
    <h2>編集</h2>
    <%= form_with model: @board_comment, url: admin_board_comment_path(@board_comment), method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="mb-3 mt-4">
      <%= f.label "本文", class: "form-label" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="mb-3 mt-4">
      <%= f.label "画像添付", class: "form-label" %>
      <%= f.file_field :board_comments_image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "編集する", class: "btn btn-success me-3" %>
    </div>

    <% end %>

  </div>
</div>