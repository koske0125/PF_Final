<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">プロフィール編集</h2>
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="mb-3 mt-4">
      <%= f.label "プロフィール画像", class: "form-label" %>
      <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "ユーザー名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム", class: "form-label" %>
      <%= f.text_field :summoner_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "サモナーネーム公開設定", class: "form-label" %><br />
      <%= f.radio_button :is_published, "closed", class: "form-check-input" %>
      <%= f.label :is_published, "非公開", value: "closed", class: "form-check-label" %>
      <%= f.radio_button :is_published, "limited", class: "form-check-input" %>
      <%= f.label :is_published, "相互フォローにのみ公開", value: "limited", class: "form-check-label" %>
      <%= f.radio_button :is_published, "opened", class: "form-check-input" %>
      <%= f.label :is_published, "全体に公開", value: "opened", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "認証状況", class: "form-label" %><br />
      <%= f.radio_button :authenticate, false, class: "form-check-input" %>
      <%= f.label :authenticate, "未認証", value: "false", class: "form-check-label" %>
      <%= f.radio_button :authenticate, true, class: "form-check-input" %>
      <%= f.label :authenticate, "認証済み", value: "true", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.label "退会ステータス", class: "form-label" %><br />
      <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
      <%= f.label :is_deleted, "有効", value: "false", class: "form-check-label" %>
      <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
      <%= f.label :is_deleted, "退会済み", value: "true", class: "form-check-label" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "プロフィール更新", class: "btn btn-success me-3" %>
    </div>

    <% end %>
  </div>

</div>