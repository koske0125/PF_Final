<div class="container-fluid">

  <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto mt-3">
    <h2 class="mt-3">ユーザー一覧</h2>
    <table class="table text-center">
      <thead>
        <tr>
          <th>ユーザID</th>
          <th>プロフィール画像</th>
          <th>ユーザー名</th>
          <th>サモナーネーム</th>
          <th>サモナーネーム公開設定</th>
          <th>認証状況</th>
          <th>退会ステータス</th>
          <th>編集</th>
        </tr>
      </thead>
      <tdoby>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "64x64", class: "rounded-circle me-2" %>
              <% else %>
                <%= image_tag asset_path("no_image.jpg"), size: "64x64", class: "rounded-circle me-2" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.summoner_name %></td>
            <td><%= user.is_published_i18n %></td>
            <td><% if user.authenticate == true %>認証済<% else %>未認証<% end %></td>
            <td><% if user.is_deleted == true %>退会済み<% else %>有効<% end %></td>
            <td><%= link_to "編集",  edit_admin_user_path(user), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tdoby>
    </table>
  </div>

</div>